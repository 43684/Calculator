<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/solution_tv"
        android:text=""
        android:textSize="32sp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/result_tv"
        android:layout_margin="16dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_tv"
        android:text="0"
        android:textSize="64sp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/buttons_layout"
        android:layout_margin="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_layout"
        android:layout_alignParentBottom="true"
        android:background="#FFD600"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sqRoute"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:backgroundTint="#FF6D00"
                android:text="√"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_percent"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    app:cornerRadius="32dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#FF6D00"
                    android:text="%"

                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_circleArea"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    app:cornerRadius="32dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#FF6D00"
                    android:text="A = π r²"
                    android:layout_marginTop="@dimen/btn_margin_vertical"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_pythagorasTheorem"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    app:cornerRadius="32dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#FF6D00"
                    android:text="A² + B² = C²"

                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_cylinderVolume"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    app:cornerRadius="32dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#FF6D00"
                    android:text="V = π r² h"
                    android:layout_marginTop="@dimen/btn_margin_vertical"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:backgroundTint="#D50000"
                android:text="C"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_bracket"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:backgroundTint="#00B8D4"
                android:text="("
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_close_bracket"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:backgroundTint="#00B8D4"
                android:text=")"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:backgroundTint="#FF6D00"
                android:text="/"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:text="7"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:text="8"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:text="9"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:backgroundTint="#FF6D00"
                android:text="*"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:text="4"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:text="5"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:text="6"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:backgroundTint="#FF6D00"
                android:text="+"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:text="1"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:text="2"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:text="3"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:backgroundTint="#FF6D00"
                android:text="-"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                android:text="AC"
                android:textColor="@color/white"
                android:backgroundTint="#D50000"
                android:textSize="20sp"
                app:cornerRadius="32dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:text="0"
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:text="."
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equals"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="32dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:backgroundTint="#FF6D00"
                android:text="="
                android:layout_marginHorizontal="@dimen/btn_margin_horizontal"
                android:layout_marginVertical="@dimen/btn_margin_vertical"

                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>